FROM rocker/r-ver:4.3.1

# Instalacja zależności systemowych (dodaj tutaj wszystkie wymagane, np. libx11-dev)
RUN apt-get update && apt-get install -y \
    libcurl4-openssl-dev \
    libssl-dev \
    libxml2-dev \
    libfontconfig1-dev \
    libharfbuzz-dev \
    libfribidi-dev \
    libfreetype6-dev \
    libpng-dev \
    libtiff5-dev \
    libjpeg-dev \
    libx11-dev \
    pandoc \
    wget \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Instalacja renv
RUN Rscript -e "install.packages('renv', repos='https://cloud.r-project.org')"

# Ustaw katalog roboczy
WORKDIR /app

# Skopiuj cały kod aplikacji (razem z renv.lock)
COPY app/ /app/

# Przywróć środowisko renv — tu instalują się wszystkie pakiety z lockfile!
RUN Rscript -e "renv::consent(TRUE); renv::restore(project = '/app', prompt = FALSE)"

# Wystaw port na świat
EXPOSE 3838

# Domyślne polecenie - uruchom Shiny
CMD ["R", "-e", "shiny::runApp('/app', host='0.0.0.0', port=3838)"]
